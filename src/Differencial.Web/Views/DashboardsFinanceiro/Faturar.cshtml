@using System.Linq
@{
    Layout = null;

}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h3>Enviar</h3>
</div>

@using (Html.BeginForm("Faturar", "Dashboards", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="modal-body">
        <div class="row">
            <div class="form-group col-md-5">

                @Html.Label("Competencia")
                @Html.TextBox("txtAcaoMovimento", "Abril/2022", new { @class = "form-control", disabled = "disabled" })
            </div>
            <div class="form-group col-md-7">


                @Html.Label("Operador Financeiro")
                @Html.TextBox("operador", "Natália", new { @class = "form-control", disabled = "disabled" })

            </div>

            <div class="form-group col-md-12 ">
                @Html.Label("Mensagem")
                @Html.TextArea("txtMensagemMovimento", new { @class = "form-control", rows = "5" })
            </div>

            <div class="form-group col-md-12">
                <label>Anexo - Comprovante</label>
                <div class="input-group">
                    <input type="text" class="form-control" readonly />
                    <label class="input-group-btn">
                        <span class="btn btn-primary ">
                            <span class="fa fa-upload">
                            </span>
                            Carregar<input type="file" name="arquivo" style="display: none;">
                        </span>
                    </label>
                </div>
            </div>

        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-white" data-dismiss="modal">Cancelar</button>
        <button type="submit" class="btn btn-success">Concluír</button>
    </div>
    <script>

    </script>
}