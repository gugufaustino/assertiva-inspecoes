			</div>
		};

		using (Html.TabPane(lstTab[1]))
		{
			@await Html.PartialAsync("AbaGestao/_AbaGestao")
		};
		using (Html.TabPane(lstTab[2]))
		{
			@await Html.PartialAsync("AbaInspecao/_AbaInspecao")
		};

		using (Html.TabPane(lstTab[3]))
