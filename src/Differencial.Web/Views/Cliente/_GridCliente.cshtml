@model IEnumerable<Cliente>

<div id="modalFiltrar" class="modal filtro fade" role="dialog" style="">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">
                    <i class="fa fa-search" aria-hidden="true"></i>
                    Filtrar
                </h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-sm-1" for="email">Nº Cia:</label>
                        <div class="col-sm-2">
                            <input type="text" class="form-control input-sm" id="email" placeholder="Critério 1">
                        </div>
                        <div class="col-sm-3">
                            <input type="text" class="form-control input-sm" id="email" placeholder="Valor 1">
                        </div>
                        <div class="col-sm-1">
                            <select class="form-control input-sm">
                                <option value="value">E</option>
                                <option value="value">Ou</option>
                            </select>
                        </div>
                        <div class="col-sm-2">
                            <input type="text" class="form-control input-sm" id="email" placeholder="Critério 1">
                        </div>
                        <div class="col-sm-3">
                            <input type="text" class="form-control input-sm" id="email" placeholder="Valor 2">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-1" for="email">Tipo:</label>
                        <div class="col-sm-2">
                            <input type="text" class="form-control input-sm" id="email" placeholder="Critério 1">
                        </div>
                        <div class="col-sm-3">
                            <input type="text" class="form-control input-sm" id="email" placeholder="Valor 1">
                        </div>
                        <div class="col-sm-1">
                            <select class="form-control input-sm">
                                <option value="value">E</option>
                                <option value="value">Ou</option>
                            </select>
                        </div>
                        <div class="col-sm-2">
                            <input type="text" class="form-control input-sm" id="email" placeholder="Critério 1">
                        </div>
                        <div class="col-sm-3">
                            <input type="text" class="form-control input-sm" id="email" placeholder="Valor 2">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-1" for="email">Contato:</label>
                        <div class="col-sm-2">
                            <input type="text" class="form-control  input-sm" id="email" placeholder="Critério 1">
                        </div>
                        <div class="col-sm-3">
                            <input type="text" class="form-control  input-sm" id="email" placeholder="Valor 1">
                        </div>
                        <div class="col-sm-1">
                            <input type="text" class="form-control  input-sm" id="email" placeholder="E/Ou">
                        </div>
                        <div class="col-sm-2">
                            <input type="text" class="form-control  input-sm" id="email" placeholder="Critério 1">
                        </div>
                        <div class="col-sm-3">
                            <input type="text" class="form-control  input-sm" id="email" placeholder="Valor 2">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-1" for="email">Telefone:</label>
                        <div class="col-sm-2">
                            <input type="text" class="form-control  input-sm" id="email" placeholder="Critério 1">
                        </div>
                        <div class="col-sm-3">
                            <input type="text" class="form-control  input-sm" id="email" placeholder="Valor 1">
                        </div>
                        <div class="col-sm-1">
                            <input type="text" class="form-control  input-sm" id="email" placeholder="E/Ou">
                        </div>
                        <div class="col-sm-2">
                            <input type="text" class="form-control  input-sm" id="email" placeholder="Critério 1">
                        </div>
                        <div class="col-sm-3">
                            <input type="text" class="form-control  input-sm" id="email" placeholder="Valor 2">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-1" for="email">Cliente:</label>
                        <div class="col-sm-2">
                            <input type="text" class="form-control  input-sm" id="email" placeholder="Critério 1">
                        </div>
                        <div class="col-sm-3">
                            <input type="text" class="form-control  input-sm" id="email" placeholder="Valor 1">
                        </div>
                        <div class="col-sm-1">
                            <input type="text" class="form-control  input-sm" id="email" placeholder="E/Ou">
                        </div>
                        <div class="col-sm-2">
                            <input type="text" class="form-control  input-sm" id="email" placeholder="Critério 1">
                        </div>
                        <div class="col-sm-3">
                            <input type="text" class="form-control  input-sm" id="email" placeholder="Valor 2">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Filtrar</button>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="table-responsive">
        <table id="tbCliente" class="grid-dataTables display table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th class="">&nbsp;</th>
                    <th class="w50px">@Html.DisplayShortNameFor(Model, m => m.Id) </th>
                    <th class="w150px">@Html.DisplayNameFor(m => m.NomeRazaoSocial)</th>
                    <th class="">@Html.DisplayNameFor(m => m.CpfCnpj)</th>
                    <th class="">Solicitações</th>

                    <th class="">@Html.DisplayNameFor(m => m.ClienteEndereco.FirstOrDefault().Endereco.Cep)</th>
                    <th class="">@Html.DisplayNameFor(m => m.ClienteEndereco.FirstOrDefault().Endereco.NomeMunicipio)</th>
                    <th class="">@Html.DisplayNameFor(m => m.ClienteEndereco.FirstOrDefault().Endereco.Logradouro)</th>
                    <th class="">@Html.DisplayNameFor(m => m.ClienteEndereco.FirstOrDefault().Endereco.Numero)</th>
                    <th class="">@Html.DisplayNameFor(m => m.ClienteEndereco.FirstOrDefault().Endereco.Bairro)</th>
                    <th class="">@Html.DisplayNameFor(m => m.ContatoNome)</th>
                    <th class="">@Html.DisplayNameFor(m => m.ContatoAgendamento)</th>
                    <th class="">@Html.DisplayNameFor(m => m.ContatoTelefone)</th>
                    <th class="w80px">@Html.DisplayShortNameFor(Model, m => m.DataCadastro)</th>
                    <th class="w80px">@Html.DisplayShortNameFor(Model, m => m.DataModificacao)</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th class="">&nbsp;</th>
                    <th class="w50px">@Html.DisplayShortNameFor(Model, m => m.Id) </th>
                    <th class="w150px">@Html.DisplayNameFor(m => m.NomeRazaoSocial)</th>
                    <th class="">@Html.DisplayNameFor(m => m.CpfCnpj)</th>
                    <th class="">Solicitações</th>
                    <th class="">@Html.DisplayNameFor(m => m.ClienteEndereco.FirstOrDefault().Endereco.Cep)</th>
                    <th class="">@Html.DisplayNameFor(m => m.ClienteEndereco.FirstOrDefault().Endereco.NomeMunicipio)</th>
                    <th class="">@Html.DisplayNameFor(m => m.ClienteEndereco.FirstOrDefault().Endereco.Logradouro)</th>
                    <th class="">@Html.DisplayNameFor(m => m.ClienteEndereco.FirstOrDefault().Endereco.Numero)</th>
                    <th class="">@Html.DisplayNameFor(m => m.ClienteEndereco.FirstOrDefault().Endereco.Bairro)</th>
                    <th class="">@Html.DisplayNameFor(m => m.ContatoNome)</th>
                    <th class="">@Html.DisplayNameFor(m => m.ContatoAgendamento)</th>
                    <th class="">@Html.DisplayNameFor(m => m.ContatoTelefone)</th>
                    <th class="w80px">@Html.DisplayShortNameFor(Model, m => m.DataCadastro)</th>
                    <th class="w80px">@Html.DisplayShortNameFor(Model, m => m.DataModificacao)</th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr id="@item.Id">
                        <td></td>
                        <td class="text-right">@item.Id </td>
                        <td class="w150px">@item.NomeRazaoSocial</td>
                        <td class="">@item.CpfCnpj</td>
                        <td class="">
                            @{
                                var solic = item.Solicitacao.FirstOrDefault();

                            }
                            @(solic != null ? solic.Id.ToString() : string.Empty)
                        </td>
                        <td class="">@item.ClienteEndereco.FirstOrDefault().Endereco.Cep</td>
                        <td class="">
                            @item.ClienteEndereco.FirstOrDefault().Endereco.NomeMunicipio<br />
                            (@item.ClienteEndereco.FirstOrDefault().Endereco.SiglaUf)
                        </td>
                        <td class="">@item.ClienteEndereco.FirstOrDefault().Endereco.Logradouro</td>
                        <td class="text-right">
                            @item.ClienteEndereco.FirstOrDefault().Endereco.Numero<br />
                            @item.ClienteEndereco.FirstOrDefault().Endereco.Complemento
                        </td>
                        <td class="">@item.ClienteEndereco.FirstOrDefault().Endereco.Bairro</td>
                        <td class="">@item.ContatoNome</td>
                        <td class="">@item.ContatoAgendamento</td>
                        <td class="text-right">@item.ContatoTelefone</td>
                        <td class="text-center">@item.DataCadastro</td>
                        <td class="text-center">@item.DataModificacao</td>

                    </tr>
                                }
            </tbody>
        </table>
    </div>
</div>

    <style>
        div.dataTables_wrapper {
            width: 1900px;
            margin: 0 auto;
        }
    </style>
