@model IEnumerable<Solicitacao>
@{
    ViewBag.Title = "Todos Agendamentos de Inspeção";
}

@using (Html.BeginPageHeading("Lista", @Html.ActionLink("Início", "Inicio", "Home")))
{
    <input type="button" class="btn btn-primary" id="btnAbrir" value="Abrir" />
}

<div class="wrapper wrapper-content">
    <div class="row">
        @using (Html.BeginBox(maximizavel: true))
        {

            <div id="modalFiltrar" class="modal filtro fade" role="dialog" style="">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">
                                <i class="fa fa-search" aria-hidden="true"></i>
                                Filtrar
                            </h4>
                        </div>
                        <div class="modal-body">
                            <form class="form-horizontal">
                                <div class="form-group">
                                    <label class="control-label col-sm-1" for="email">Nº Cia:</label>
                                    <div class="col-sm-2">
                                        <input type="text" class="form-control input-sm" id="email" placeholder="Critério 1">
                                    </div>
                                    <div class="col-sm-3">
                                        <input type="text" class="form-control input-sm" id="email" placeholder="Valor 1">
                                    </div>
                                    <div class="col-sm-1">
                                        <select class="form-control input-sm">
                                            <option value="value">E</option>
                                            <option value="value">Ou</option>
                                        </select>
                                    </div>
                                    <div class="col-sm-2">
                                        <input type="text" class="form-control input-sm" id="email" placeholder="Critério 1">
                                    </div>
                                    <div class="col-sm-3">
                                        <input type="text" class="form-control input-sm" id="email" placeholder="Valor 2">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-sm-1" for="email">Tipo:</label>
                                    <div class="col-sm-2">
                                        <input type="text" class="form-control input-sm" id="email" placeholder="Critério 1">
                                    </div>
                                    <div class="col-sm-3">
                                        <input type="text" class="form-control input-sm" id="email" placeholder="Valor 1">
                                    </div>
                                    <div class="col-sm-1">
                                        <select class="form-control input-sm">
                                            <option value="value">E</option>
                                            <option value="value">Ou</option>
                                        </select>
                                    </div>
                                    <div class="col-sm-2">
                                        <input type="text" class="form-control input-sm" id="email" placeholder="Critério 1">
                                    </div>
                                    <div class="col-sm-3">
                                        <input type="text" class="form-control input-sm" id="email" placeholder="Valor 2">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-sm-1" for="email">Contato:</label>
                                    <div class="col-sm-2">
                                        <input type="text" class="form-control  input-sm" id="email" placeholder="Critério 1">
                                    </div>
                                    <div class="col-sm-3">
                                        <input type="text" class="form-control  input-sm" id="email" placeholder="Valor 1">
                                    </div>
                                    <div class="col-sm-1">
                                        <input type="text" class="form-control  input-sm" id="email" placeholder="E/Ou">
                                    </div>
                                    <div class="col-sm-2">
                                        <input type="text" class="form-control  input-sm" id="email" placeholder="Critério 1">
                                    </div>
                                    <div class="col-sm-3">
                                        <input type="text" class="form-control  input-sm" id="email" placeholder="Valor 2">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-sm-1" for="email">Telefone:</label>
                                    <div class="col-sm-2">
                                        <input type="text" class="form-control  input-sm" id="email" placeholder="Critério 1">
                                    </div>
                                    <div class="col-sm-3">
                                        <input type="text" class="form-control  input-sm" id="email" placeholder="Valor 1">
                                    </div>
                                    <div class="col-sm-1">
                                        <input type="text" class="form-control  input-sm" id="email" placeholder="E/Ou">
                                    </div>
                                    <div class="col-sm-2">
                                        <input type="text" class="form-control  input-sm" id="email" placeholder="Critério 1">
                                    </div>
                                    <div class="col-sm-3">
                                        <input type="text" class="form-control  input-sm" id="email" placeholder="Valor 2">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-sm-1" for="email">Cliente:</label>
                                    <div class="col-sm-2">
                                        <input type="text" class="form-control  input-sm" id="email" placeholder="Critério 1">
                                    </div>
                                    <div class="col-sm-3">
                                        <input type="text" class="form-control  input-sm" id="email" placeholder="Valor 1">
                                    </div>
                                    <div class="col-sm-1">
                                        <input type="text" class="form-control  input-sm" id="email" placeholder="E/Ou">
                                    </div>
                                    <div class="col-sm-2">
                                        <input type="text" class="form-control  input-sm" id="email" placeholder="Critério 1">
                                    </div>
                                    <div class="col-sm-3">
                                        <input type="text" class="form-control  input-sm" id="email" placeholder="Valor 2">
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" data-dismiss="modal">Filtrar</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="table-responsive">
                    <table id="tbTodasAgendas" class="grid-dataTables display table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th class="">&nbsp;</th>
                                <th>Situação Agenda</th>
                                <th class="w50px">@Html.DisplayShortNameFor(Model, m => m.Id) </th>
                                <th class="w50px">@Html.DisplayNameFor(m => m.CodSeguradora)</th>
                                <th class="">@Html.DisplayNameFor(m => m.TpSituacao)</th>
                                <th>Data Situação</th>
                                <th>Tempo</th>
                                <th>@Html.DisplayNameFor(m => m.Vistoriador.Operador.NomeOperador)</th>
                                <th class="w120px">@Html.DisplayNameFor(m => m.Produto.NomeProduto)</th>
                                <th class="w120px">@Html.DisplayNameFor(m => m.Produto.Seguradora.NomeSeguradora)</th>
                                <th class="">@Html.DisplayNameFor(m => m.Cliente.NomeRazaoSocial)</th>
                                <th class="">@Html.DisplayNameFor(m => m.Endereco.NomeMunicipio)</th>
                                <th class="w80px">@Html.DisplayShortNameFor(Model, m => m.DataCadastro)</th>
                                <th class="w80px">@Html.DisplayShortNameFor(Model, m => m.DataModificacao)</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th class="">&nbsp;</th>
                                <th>Situação Agenda</th>
                                <th>@Html.DisplayShortNameFor(Model, m => m.Id) </th>
                                <th>@Html.DisplayNameFor(m => m.CodSeguradora)</th>
                                <th>@Html.DisplayNameFor(m => m.TpSituacao)</th>
                                <th>Data Situação</th>
                                <th>Tempo</th>
                                <th>@Html.DisplayNameFor(m => m.Vistoriador.Operador.NomeOperador)</th>

                                <th>@Html.DisplayNameFor(m => m.Produto.NomeProduto)</th>
                                <th>@Html.DisplayNameFor(m => m.Produto.Seguradora.NomeSeguradora)</th>
                                <th>@Html.DisplayNameFor(m => m.Cliente.NomeRazaoSocial)</th>
                                <th>@Html.DisplayNameFor(m => m.Endereco.NomeMunicipio)</th>

                                <th>@Html.DisplayShortNameFor(Model, m => m.DataCadastro)</th>
                                <th>@Html.DisplayShortNameFor(Model, m => m.DataModificacao)</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                var ultimoMovimento = item.MovimentacaoProcesso.LastOrDefault();
                                var enviadoVistoria = item.MovimentacaoProcesso.LastOrDefault(m => m.TipoSituacaoProcesso == TipoSituacaoProcessoEnum.EnviadoParaVistoria);
                                <tr id="@item.Id">
                                    <td></td>
                                    <td class="text-center">
                                        @HtmlGridHelper.SituacaoAgenda(item.Agendamento, (enviadoVistoria == null ? (System.Nullable<DateTime>)null : enviadoVistoria.DthMovimentacao))
                                    </td>
                                    <td class="text-right">@item.Id </td>
                                    <td class="text-right">@item.CodSeguradora</td>
                                    <td class="text-center">@HtmlGridHelper.SituacaoProcesso(item.TpSituacao)  </td>
                                    <td class="text-center">@ultimoMovimento.DthMovimentacao.FormatoDataHora()  </td>
                                    <td class="text-center text-nowrap">
                                        @HtmlGridHelper.TempoDecorrido(item.DataModificacao)
                                    </td>
                                    <td class="">
                                        @if (item.TpSituacao == TipoSituacaoProcessoEnum.EnviadoParaVistoria || item.TpSituacao == TipoSituacaoProcessoEnum.ApropriadoVistoriador)
                                        {
                                            @Html.Raw(item.Vistoriador == null ? string.Empty : HtmlGridHelper.TextoSubTexto(item.Vistoriador.Operador.NomeOperador, "{0} - {1}".Formata(item.Vistoriador.EnderecoBase.NomeMunicipio, item.Vistoriador.EnderecoBase.SiglaUf)))
                                        }
                                        else
                                        {
                                            @(ultimoMovimento.OperadorOrigem == null ? string.Empty : HtmlGridHelper.TextoSubTexto(ultimoMovimento.OperadorOrigem.NomeOperador, ""))
                                        }
                                    </td>
                                    <td class="">@item.Produto.NomeProduto</td>
                                    <td class="">@item.Produto.Seguradora.NomeSeguradora</td>
                                    <td class="">@item.Cliente.NomeRazaoSocial</td>
                                    <td class="">@item.Endereco.NomeMunicipio (@item.Endereco.SiglaUf)</td>
                                    <td class="text-center">@item.DataCadastro</td>
                                    <td class="text-center">@item.DataModificacao</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }

    </div>
</div>
@section Styles {
    <style>
        div.dataTables_wrapper {
            width: 1900px;
            margin: 0 auto;
        }
    </style>
}
@section scripts{
    <script type="text/javascript">
        var grideTodasAgendas;
        $(document).ready(function () {

            grideTodasAgendas = $('#tbTodasAgendas').dataTableCli();

            $("#btnAbrir").click(function () {
                abrilSolicitacao(grideTodasAgendas.rows({ selected: true }));
            });

        });

        function abrilSolicitacao(objRows) {
            arrSel = objRows.ids().toArray()

            if (arrSel.length > 0) {
                window.location = "/Solicitacao/Editar/" + arrSel[0];
            } else {
                alertaMensagem("Selecione um item da lista");
            }

        }

    </script>
}

