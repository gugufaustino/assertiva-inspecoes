@inject Differencial.Domain.Contracts.Util.IConfiguracaoAplicativo ConfiguracaoAplicativo
@{
    Layout = null;
    ViewBag.Title = "Esqueceu a Senha";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - Differencial - Inspeções de Risco</title>

    <partial name="_StylePartial" />
    <link href="~/Content/animate.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="passwordBox animated fadeInDown">
        <div class="row">

            <div class="col-md-12">
                <div class="ibox-content">
                    <h2 class="font-bold">Esqueceu a  Senha</h2>
                    <p>
                        Digite seu endereço de e-mail e sua senha será redefinida e enviada por e-mail para você.
                    </p>
                    <div class="row">
                        <div class="col-lg-12">
                            @using (Html.BeginForm("EsqueceuSenha", "Home", FormMethod.Post, new { @class = "m-t", @role = "form", @fw_form = "fw-form", @fw_fn_sucesso = "fnSenhaSucesso(result)" }))
                            {
                                <div class="form-group">
                                    <input type="email" class="form-control" placeholder="E-mail" required="" name="usuario">
                                </div>
                                <br />
                                <button type="submit" class="btn btn-primary block full-width m-b">Enviar nova senha</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-6">
                <small>@ConfiguracaoAplicativo.NomeEmpresaCompleto</small>
            </div>
            <div class="col-md-6 text-right">
                <small>Todos os direitos reservados &copy; @DateTime.Now.Date.Year</small>
            </div>
        </div>
    </div>

    <partial name="_Carregando" />

    <partial name="_ScriptsjQueryBootstrapPartial" />
    <partial name="_ScriptsLibsPartial" />
    <partial name="_ScriptsAppPartial" />

    <script>
        function fnSenhaSucesso(result) {
            document.forms[0].reset();
        }

    </script>

</body>
</html>
