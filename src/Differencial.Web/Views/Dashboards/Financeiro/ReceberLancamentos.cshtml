@model IEnumerable<FinanceiroLancamentosReceberDto>
@{
    Layout = null;
}
<div class="modal-header" style="padding-bottom: 5px;">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h3>Lançamentos de @ViewData["NomeSeguradora"] - Competência: @ViewData["Mes"]/@ViewData["Ano"]</h3>
</div>

<div class="modal-body m-t-none" style="padding-top:0">
    <div class="row" style="margin-right: -25px; margin-left: -25px;">
        <div class="table-responsive">
            <table id="tbReceberLancamentos" class="grid-dataTables display table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th class="">Nº inspeção</th>
                            <th class="">Nº proposta</th>
                        <th class="">Nº Cia</th>
                            <th class="">Centro de custo</th>
                        <th class="">Data de solicitação</th>
                        <th class="">Data de agendamento</th>
                        <th class=""> Data de envio </th>
                        <th>Solicitante</th>                        
                        <th>Ramo</th>
                            <th>Modalidade</th>
                            <th>Regional</th>
                        <th style="width:180px">Cliente</th>
                        <th style="width:180px">Endereço</th>

                        <th>Cidade base</th>
                        <th>UF</th>
                        <th>Inspetor</th>
                        <th>Pedagio</th>
                        
                        <th>KM</th>
                            <th>KM Base</th>
                        <th>Valor km</th>
                        <th>Honorários</th>
                        <th class="">Valor total</th>
                        
                        <th class="">Situação 
                            <br /><span class="small">(Frustrada, liquidada ou em andamento)</span>
                        </th>
                        <th class="">Valor do risco</th>
                        <th class="">Carta de recomendação (S/N)</th>
                        <th class="">Observações</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr id="@item.Id">
                        <td class="text-right">
                            @item.Id
                        </td>
                        <td class="">
                        </td>
                        <td class="text-center">
                            @item.CodSeguradora
                        </td>
                        <td class="">
                        </td>
                        <td class="text-center">
                            @item.DataCadastro
                        </td>
                        <td class="">
                        </td>
                        <td class="">
                        </td>
                        <td class="">
                        </td>
                        <td class="">
                            @item.AtividadeNome
                        </td>
                        <td class=""></td>
                        <td class=""></td>
                        <td class="" style="width:180px">@item.Cliente</td>
                        <td class=" " style="width:180px">@item.Logradouro, @item.NomeMunicipio - @item.SiglaUf</td>

                        <td class="">@item.VistoriadorCidadeBase</td>
                        <td class="">@item.VistoriadorSiglaUf</td>
                        <td class="">@item.VistoriadorNome</td>
                        <td class=""></td>
                        
                        <td class="text-right">@item.DeslocamentoRealizado</td>
                            <td class=""></td>
                        <td class="text-right">@item.VlrQuilometroRodado</td>
                        <td class="text-right">@item.VlrPagamentoVistoria</td>
                        <td class="text-right">@item.ValorLancamentoFinanceiroTotal.FormataMoeda()</td>

                        <td class="text-center">@item.TipoSituacaoProcesso</td>
                        <td class="">@item.VlrRiscoSegurado</td>
                        <td class=""></td>
                        <td class=""></td>
                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
<style>
    #tbReceberLancamentos_wrapper.dataTables_wrapper {
        width: 2800px;
        margin: 0 auto;
    }
</style>
<script>
    $(document).ready(function () {
        grideReceberLancamentos = $('#tbReceberLancamentos').Gride({
            order: [[1, 'desc']],
            autoWidth: true,
            bExportacao: true,
