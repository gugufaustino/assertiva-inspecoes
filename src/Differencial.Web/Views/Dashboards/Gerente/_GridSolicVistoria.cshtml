		<div class="row">
			<div class="table-responsive ">
				<table id="tbGerenteSolicVistoria" class="grid-dataTables display table table-striped table-bordered table-hover">
					<thead>
						<tr>
							<th class="">&nbsp;</th>
							<th class="w50px">Código</th>
							<th class="w50px">@Html.DisplayNameFor(m => m.CodSeguradora)</th>
							<th class="w130px">@Html.DisplayNameFor(m => m.Seguradora.NomeSeguradora)</th>
							<th class="">Produto</th>
							<th class="">Nome/Razão Social</th>
							<th class="w100px">@Html.DisplayNameFor(m => m.TpSituacao)</th>
							<th class="w80px">@Html.DisplayShortNameFor(Model, m => m.DataCadastro)</th>
							<th class="w90px">Definir Vistoriador</th>
							<th class="w90px">Definir Analista</th>
							<th hidden></th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr id="@item.Id">
								<td></td>
								<td>
									@item.Id
								</td>
								<td class="text-nowrap">
									@item.CodSeguradora
								</td>
								<td>
									@item.Seguradora.NomeSeguradora
								</td>
								<td>
									@item.Produto.NomeProduto
								</td>
								<td>
									@HtmlGridHelper.TextoSubTexto(item.Cliente.NomeRazaoSocial, item.Endereco.NomeMunicipio + " - " + item.Endereco.SiglaUf)
								</td>

								<td class="text-center">
									@HtmlGridHelper.SituacaoProcesso(item.TpSituacao)
								</td>
								<td class="text-center">
									@item.DataCadastro
								</td>
								<td> @HtmlGridHelper.SituacaoAtividade(item.AtividadeProcesso, TipoAtividadeEnum.DefinirVistoriador)  </td>
								<td> @HtmlGridHelper.SituacaoAtividade(item.AtividadeProcesso, TipoAtividadeEnum.DefinirAnalista)  </td>
								<td>@item.IndUrgente</td>
							</tr>
						}

					</tbody>
				</table>
