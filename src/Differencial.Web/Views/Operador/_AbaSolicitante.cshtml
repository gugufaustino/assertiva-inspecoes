@model Operador

@if (Model != null && Model.Solicitante != null)
{
    @Html.HiddenFor(m => m.Solicitante.Id)
}


<div class="row">
    <div class="col-md-12">
        <div class="form-group col-md-6">
            @Html.FwLabelFor(m => m.Solicitante.Seguradora.NomeSeguradora)
            @{
                List<SelectListItem> selectlistSeguradora = ViewBag.lstSeguradora ?? new List<SelectListItem>();
            }
            @Html.DropDownListFor(m => m.Solicitante.IdSeguradora, selectlistSeguradora, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Solicitante.IdSeguradora)
        </div>
        <div class="form-group col-md-3 col-md-offset-3">
            @Html.FwLabelFor(m => m.Solicitante.IndAtivo)
            @Html.FwStatusFor(m => m.Solicitante.IndAtivo)
        </div>

    </div>
</div>