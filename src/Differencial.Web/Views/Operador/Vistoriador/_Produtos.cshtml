@model Operador
<div class="row" style="margin-top: -10px !important">
    <div class="pull-right form-group no-margins">
        <button type="button" class="btn btn-primary btn-sm" id="btnEditarValoresProdutoVistoria">Editar Valores</button>
        <button type="button" class="btn btn-primary btn-sm" id="btnAtivarProdutoVistoria">Ativar</button>
        <button type="button" class="btn btn-primary btn-sm" id="btnDesativarProdutoVistoria">Desativar</button>
    </div>
</div>
<div class="row">
    <div class="table-responsive no-margin-top">
        <table id="tbProdutoVisoriador" class="grid-dataTables display table table-striped table-bordered table-hover" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>&nbsp;</th>
                    <th>Seguradora</th>
                    <th>@Html.DisplayNameFor(m => m.Vistoriador.VistoriadorProduto.FirstOrDefault().Produto.NomeProduto)</th>
                    <th class="w150px">@Html.DisplayName("Paramêtro")</th>
                    <th class="w100px">Quilometro R$</th>
                    
                    <th class="w100px">Honorário R$</th>
                    <th class="w80px">Modificacao</th>
                    <th class="w50px">@Html.DisplayNameFor(m => m.Vistoriador.VistoriadorProduto.FirstOrDefault().IndAtivo)</th>
                    <th>&nbsp;</th>
                    <th>&nbsp;</th>
                    <th>&nbsp;</th>
                    <th>&nbsp;</th>
                    <th>&nbsp;</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody>              
                <tr id="">
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>

                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>

                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>                
            </tbody>
        </table>
    </div>
</div>

<div id="modalEditarProdutos" class="modal fade" role="dialog" style="">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">
                    <i class="fa fa-edit" aria-hidden="true"></i>
                    Editar Registros Selecionados
                </h4>
            </div>
            <div class="modal-body">
                <div class="row form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-md-4" for="">
                            @Html.DisplayNameFor(m => m.Vistoriador.VistoriadorProduto.FirstOrDefault().VlrQuilometroRodado)
                        </label>
                        <div class="col-md-2">
                            @Html.FwCurrencyFor(m => m.Vistoriador.VistoriadorProduto.FirstOrDefault().VlrQuilometroRodado)
                        </div>
                        <label class="control-label col-md-4" for="">
                            @Html.DisplayNameFor(m => m.Vistoriador.VistoriadorProduto.FirstOrDefault().VlrPagamentoVistoria)
                        </label>
                        <div class="col-md-2">
                            @Html.FwCurrencyFor(m => m.Vistoriador.VistoriadorProduto.FirstOrDefault().VlrPagamentoVistoria)
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="btnSalvarRegistros">Salvar</button>
            </div>
        </div>
    </div>
</div>

<style>
    #modalEditarProdutos .control-label {
        padding-right: 0;
    }

    #modalEditarProdutos .col-md-2 {
        padding-left: 5px;
    }
</style>